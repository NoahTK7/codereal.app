// Prisma schema file
// Learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider     = "mysql"
    url          = env("DATABASE_URL")
    relationMode = "prisma"
}

model Question {
    id Int @id @default(autoincrement())

    startsAt    DateTime
    endsAt      DateTime
    description String       @db.VarChar(511)
    funcSig     String       @db.VarChar(63)
    funcName    String       @db.VarChar(63)
    testCases   String       @db.VarChar(1023)
    submissions Submission[]
    startEvents StartEvent[]

    // TODO: index on timestamps?
    @@index([id])
}

model Submission {
    id        Int      @id @default(autoincrement())
    createdAt DateTime @default(now())

    authorId     String           @db.VarChar(255)
    question     Question         @relation(fields: [questionId], references: [id])
    questionId   Int
    runResult    SubmissionResult
    score        Int
    codeLength   Int
    solveTime    Int
    execTime     Int
    accuracy     Float
    errorMessage String?          @db.VarChar(1023)
    code         String           @db.VarChar(511)
    executionId  String           @db.VarChar(63)

    @@index([id])
    @@index([questionId, authorId])
}

enum SubmissionResult {
    CORRECT
    INCORRECT
    ERROR
    TIMEOUT
    UNKNOWN
}

model StartEvent {
    id        Int      @id @default(autoincrement())
    createdAt DateTime @default(now())

    authorId   String   @db.VarChar(255)
    question   Question @relation(fields: [questionId], references: [id])
    questionId Int

    @@index([questionId, authorId])
}
